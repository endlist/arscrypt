{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
          "modules": true
      }
  },
  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-useless-constructor": "warn"
  },
  "env": {
      "browser": true,
      "node": true,
      "jest": true
  },
  "plugins": [
    "react"
  ]
}
